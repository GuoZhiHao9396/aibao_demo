<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mytian.lb"
    android:installLocation="auto">

    <!-- 解决Android L上通知显示异常问题，targetSdkVersion需要设置成22 -->
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="false"
        android:resizeable="true"
        android:smallScreens="true" />

    <!--fir.img-->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 允许程序访问Wi-Fi网络状态信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- 允许程序获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 允许程序读取或写入系统设置 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <!-- 允许一个程序修改当前设置，如本地化 -->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <!-- 读取设备外部存储空间（内置SDcard和外置SDCard）的文件 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 写入设备外部存储空间（内置SDcard和外置SDCard）的文件 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 请求访问使用照相设备 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 允许应用去呼叫killBackgroundProcesses()方法 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <!--短信-->
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.mytian.lb.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">

        <!--fir.img-->
        <meta-data
            android:name="BUG_HD_SDK_GENERAL_KEY"
            android:value="073c54e897ed1268e330b4ceb3f78312" />

        <activity
            android:name=".activity.LauncherActivity"
            android:theme="@style/AppThemeWTN">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--主界面-->
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppThemeWTN">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>

        <!--登录-->
        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppThemeTN"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--注册-->
        <activity
            android:name=".activity.RegisterActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--重置密码-->
        <activity
            android:name=".activity.ResetPassWordActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--添加关注-->
        <activity
            android:name=".activity.AddFollowActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--好友列表-->
        <activity
            android:name=".activity.FriendslistActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--系统设置-->
        <activity
            android:name=".activity.SysSettingActivity"
            android:windowSoftInputMode="adjustPan"></activity>

        <!--图片裁剪-->
        <activity
            android:name=".activity.AuthClipPictureActivity"
            android:theme="@style/AppTheme"></activity>

        <!-- push service start -->
        <!--个推SDK配置开始-->
        <!-- 配置第三方Receiver -->
        <receiver
            android:name=".push.PushMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.igexin.sdk.action.kvuUWGiv0c6sHXaYA8JzT7" />
            </intent-filter>
        </receiver>
        <!-- 个推SDK配置结束 -->

    </application>

</manifest>
