<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_bg_layout"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/content_gap"
        android:layout_marginRight="@dimen/content_gap"
        android:background="@drawable/light_divide" />

    <com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/swipe"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp"
        android:layout_height="match_parent">

        <RelativeLayout android:layout_width="90dp"
            android:id="@+id/delete_layout"
            android:background="?attr/colos_match"
            android:layout_gravity="right"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/cancel_attention"
            android:gravity="center"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/head"
            android:layout_width="@dimen/item_head_size_small"
            android:layout_height="@dimen/item_head_size_small"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/content_gap"
            app:riv_border_width="0dip"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="repeat" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textColor="@color/textcolor_222"
                android:textSize="@dimen/font_btn" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/content_gap_small"
                android:textColor="@color/gray_hint"
                android:textSize="@dimen/font_least" />

        </RelativeLayout>
    </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>

