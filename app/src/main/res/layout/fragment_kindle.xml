<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mytian.lb.mview.MarkDownView
        android:id="@+id/markdownview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_bg_layout">
    </com.mytian.lb.mview.MarkDownView>

    <com.pnikosis.materialishprogress.ProgressWheel
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress"
        android:layout_width="@dimen/progress_radius45"
        android:layout_height="@dimen/progress_radius45"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|top"
        wheel:matProg_barColor="@color/theme_progress"
        wheel:matProg_barWidth="@dimen/progress_thickness"
        wheel:matProg_fillRadius="true"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>