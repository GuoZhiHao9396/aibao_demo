<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_bg_layout">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/content_10dp"
        android:paddingTop="@dimen/content_10dp">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/head"
            android:layout_width="@dimen/item_head_size"
            android:layout_height="@dimen/item_head_size"
            android:layout_marginLeft="@dimen/content_gap"
            android:layout_marginRight="@dimen/content_gap"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_contact"
            app:riv_border_width="0dip"
            app:riv_corner_radius="4dip"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="repeat" />

        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@+id/head"
            android:layout_toLeftOf="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:text="habit name"
            android:textColor="@color/textcolor_222"
            android:textSize="@dimen/font_btn" />

        <ImageView
            android:id="@+id/like"
            android:layout_toLeftOf="@+id/dislike"
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:padding="@dimen/content_gap"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_like_normal"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/dislike"
            android:layout_alignParentRight="true"
            android:padding="@dimen/content_gap"
            android:scaleType="centerInside"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_dislike_normal"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_1dp"
        android:layout_below="@+id/main_layout"
        android:layout_marginLeft="@dimen/content_gap"
        android:layout_marginRight="@dimen/content_gap"
        android:background="@drawable/light_divide" />

</RelativeLayout>

