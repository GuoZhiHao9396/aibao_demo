<resources>

    <style name="menu_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/drawerlayout_menu_gap</item>
        <item name="android:paddingBottom">@dimen/drawerlayout_menu_gap</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <style name="drawer_ly_tv" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">35dp</item>
    </style>

    <style name="drawer_tv" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="drawer_value_tv" >
        <item name="android:textColor">@color/theme</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CheckBoxDrawable" parent="Material.Drawable.CheckBox"/>

    <style name="FloatingActionButtonIcon" >
        <item name="lmd_state">@xml/fab_icon_states</item>
        <item name="lmd_curState">0</item>
        <item name="lmd_padding">2dp</item>
        <item name="lmd_animDuration">400</item>
        <item name="lmd_interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_strokeColor">#FFFFFFFF</item>
        <item name="lmd_strokeCap">butt</item>
        <item name="lmd_strokeJoin">miter</item>
        <item name="lmd_clockwise">true</item>
    </style>

</resources>
